
import antidote.crdts.lemmas.CvRDT
import antidote.crdts.LamportClock
import antidote.crdts.VersionVector
import antidote.crdts.lemmas.CvRDTProof4
import generatedSysTables.songs.SongsTable_genPK
import generatedSysTables.albs.AlbsTable_genPK
import generatedSysTables.genres.GenresTable_genPK

/*
 * class implementing the Convergence proof
 */
class Song_FK_System_genPK[Time, PK, A, B](
					songsTable: SongsTable_genPK[Time, PK],
					albsTable: AlbsTable_genPK[Time, A], 
					genresTable: GenresTable_genPK[Time, B] )
					extends CvRDT[Song_FK_System_genPK[Time, PK, A, B]] {


  /*
   * OVERRIDE DEFAULT IMPLEMENTATION OF METHODS IN CvRDT TRAIT
   */ 

	//REACHABLE - check if this table and the referenced tables are reachable
	override def reachable(): Boolean =
				this.songsTable.reachable() && 
				this.albsTable.reachable() && 
				this.genresTable.reachable()


	//COMPATIBLE - check if this Song_FK_System is compatible with that songsTable
	override def compatible(that: Song_FK_System_genPK[Time, PK, A, B]): Boolean =
				this.songsTable.compatible(that.songsTable) &&
				this.albsTable.compatible(that.albsTable) &&
				this.genresTable.compatible(that.genresTable)


	//EQUALS - check if this Song_FK_System is equal to that Song_FK_System
	override def equals(that: Song_FK_System_genPK[Time, PK, A, B]) =
				this == that


  /*
   * IMPLEMENT DECLARED METHODS IN CvRDT TRAIT
   */

	//MERGE this Song_FK_System with that Song_FK_System
	def merge(that: Song_FK_System_genPK[Time, PK, A, B]) =
		new Song_FK_System_genPK(
				this.songsTable.merge(that.songsTable), 
				this.albsTable.merge(that.albsTable),
				this.genresTable.merge(that.genresTable) )

	//COMPARE this Song_FK_System with that Song_FK_System
	//ignore
	def compare(that: Song_FK_System_genPK[Time, PK, A, B]) = 
				true



  /*
   * EXTRA METHODS FOR PROOFS
   */

	// REACHABLE WITH ASSUMPTIONS - ASSOCIATIVITY
	def reachableWithAssociativityAssumptions(): Boolean = {
				this.songsTable.reachable() && 
				this.albsTable.reachable() &&
				this.genresTable.reachable() && 
				this.mergeValuesAssumptions()
	}
		//HELPER METHOD - ASSUMPTIONS FOR MERGE ASSOCIATIVITY - for the tables of this Song_FK_System
		private def mergeValuesAssumptions(): Boolean = {
			forall(v1: SongsTable_genPK[Time, PK], v2: SongsTable_genPK[Time, PK], v3: SongsTable_genPK[Time, PK])
				  { v1.merge(v2).merge(v3) == v1.merge( v2.merge(v3) )
				  } &&
			forall(v1: AlbsTable_genPK[Time, A], v2: AlbsTable_genPK[Time, A], v3: AlbsTable_genPK[Time, A])
				  { v1.merge(v2).merge(v3) == v1.merge( v2.merge(v3) )
				  } &&
			forall(v1: GenresTable_genPK[Time, B], v2: GenresTable_genPK[Time, B], v3: GenresTable_genPK[Time, B])
				  { v1.merge(v2).merge(v3) == v1.merge( v2.merge(v3) )
				  }
		}

}



/*
 * OBJECT FOR EXTRA PROOFS
 */
object Song_FK_System_genPK extends CvRDTProof4[Song_FK_System_genPK] {

	//MERGE ASSOCIATIVE
	proof mergeIsAssociative_genPK[Time, PK] {
		forall(s1: SongsTable_genPK[Time, PK], s2: SongsTable_genPK[Time, PK], s3: SongsTable_genPK[Time, PK]) {
			(s1.reachable() && s2.reachable() && s3.reachable() &&
			  s1.compatible(s2) && s1.compatible(s3) && s2.compatible(s3)
			) =>: {
				val aux = s1.merge(s2).merge(s3)
				aux.equals(s1.merge( s2.merge(s3) ))
				aux.reachable()
				}
		}
	}

}
